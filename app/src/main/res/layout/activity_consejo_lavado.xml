<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consejo_lavado">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="301dp"
        android:layout_height="68dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            app:srcCompat="@drawable/cuidado" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_regresarlavado"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        app:srcCompat="@drawable/regresar" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="345dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.163"
        app:srcCompat="@drawable/introlavar" />

    <LinearLayout
        android:layout_width="148dp"
        android:layout_height="398dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.825">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="110dp"
            android:layout_height="127dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/lavarmax" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="110dp"
            android:layout_height="127dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/detergente" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/trapear" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="188dp"
        android:layout_height="373dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:text="Carga la lavadora al máximo de ropa: la cantidad de agua y energía que utiliza una lavadora es independiente de la cantidad de ropa que vayas a lavar. " />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:text="Reduce la dosis de detergente: dependiendo de la dureza del agua es necesario aplicar más o menos cantidad, pero trata de utilizar siempre la menor cantidad posible." />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reutiliza el agua de lavado para el excusado, limpiar los pisos o incluso regar el jardín, dependiendo del detergente que utilices. " />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>